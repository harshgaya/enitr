<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginnActivity"
    android:background="@drawable/backgroundaku">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Carthive"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/colorAccent"
        android:textSize="40sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="The App where you will get currently books within 24 hours .We are delivering currently in your city at very low price as compared to shops."
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:layout_below="@+id/textView3"
        android:layout_margin="10dp"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/text7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/coupenRed"
        android:textSize="20sp"
        android:layout_below="@+id/textView4"
        android:layout_margin="10dp"
        android:text="@string/login"


        android:textAlignment="center"/>
    <TextView
        android:id="@+id/textView5"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:textSize="15sp"
        android:layout_below="@+id/text7"
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account Creation Option->"/>
    <TextView
        android:id="@+id/textView6"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:layout_below="@+id/textView5"
        android:textColor="@color/coupenRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login2"/>


    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@+id/textView6"
        />
</RelativeLayout>